<div class='login'>
  <div>
    <img src="../images/logo.png" alt="" class='signup-logo'>
  </div>
  <div class='login-form'>
    <form action="/signup" method="post">
      <div class='username'>
        <label for="">Username</label>
        <input type="text" name="username" placeholder="Username">
      </div>
      <div class='username'>
        <label for="">Email</label>
        <input type="email" name="email" placeholder="Email">
      </div>
      <div class="password">
        <label for="">Password</label>
        <input type="password" name="password" placeholder="Password">
      </div>
      <div class="password">
        <label for="">Repeat password</label>
        <input type="password" name="repeatedPassword" placeholder="Repeat password">
      </div>
      <div class='log-sign'>
        <label><input id="terms" type="checkbox" name="terms" required>Accept the terms and conditions.</label>
        <label><input id="news" type="checkbox" name="news" value="false">Subscribe to our newsletter!</label>
        <br>
        <button>SIGNUP</button>
      </div>
    </form>

    <a href="/">Go to login page</a>
  </div>
</div>


{{#if messageError}}
<p class="message-error">{{messageError}}</p>
{{/if}}